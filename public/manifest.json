{
  "manifest_version": 3,
  "name": "GitHub RAG TCC (Side Panel)",
  "version": "2.0",
  "description": "Extensão com RAG para análise de repositórios GitHub.",
  "permissions": [
    "storage",
    "notifications",
    "downloads",
    "sidePanel"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Abrir GitHub RAG",
    "default_icon": {
      "16": "logo16.png",
      "48": "logo48.png",
      "128": "logo128.png"
    }
  },
  "side_panel": {
    "default_path": "index.html"
  },
  "icons": {
    "16": "logo16.png",
    "48": "logo48.png",
    "128": "logo128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' https://accounts.google.com/gsi/client; object-src 'self'; connect-src 'self' https://meu-tcc-testes-041c1dd46d1d.herokuapp.com https://accounts.google.com;"
  }
}